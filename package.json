{
  "name": "pokemon-list",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "bootstrap": "^4.0.0",
    "gh-pages": "^1.1.0",
    "history": "^4.7.2",
    "lodash.get": "^4.4.2",
    "react": "^16.3.1",
    "react-app-rewired": "^1.5.0",
    "react-dom": "^16.3.1",
    "react-redux": "^5.0.7",
    "react-scripts": "1.1.4",
    "reactstrap": "^5.0.0",
    "redux": "^3.7.2",
    "redux-actions": "^2.3.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.5.1",
    "redux-thunk": "^2.2.0",
    "styled-components": "^3.2.5"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-enzyme": "^6.0.0",
    "lint-staged": "^7.0.4",
    "react-cosmos": "^3.6.1",
    "react-cosmos-redux-proxy": "^3.6.1",
    "react-cosmos-router-proxy": "^3.6.1",
    "react-cosmos-test": "^3.6.1",
    "react-test-renderer": "^16.3.2",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1"
  },
  "scripts": {
    "prestart": "yarn",
    "start": "react-app-rewired start",
    "build": "react-scripts build",
    "test": "jest --env=jsdom",
    "test:ci": "jest --env=jsdom --ci",
    "coverage": "npm test -- --coverage",
    "lint": "standard \"src/**/*.js\" --fix --verbose | snazzy",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "cosmos": "cosmos",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!<rootDir>/node_modules/",
      "!src/*.{js}",
      "!src/cosmos.proxies.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "jest",
      "describe",
      "it",
      "xit",
      "expect",
      "beforeEach"
    ]
  }
}
